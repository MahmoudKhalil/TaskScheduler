<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#F4E6C9">

    <FrameLayout
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="#EECE8B">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/itemNoteTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="@color/colorEbonyClay"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/deleteNoteImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:tint="@color/colorEbonyClay"
            app:srcCompat="@drawable/delete_button" />
    </LinearLayout>
</androidx.cardview.widget.CardView>